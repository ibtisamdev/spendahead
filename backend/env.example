# Application Settings
APP_NAME=SpendAhead Backend
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/spendahead
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/spendahead
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production-this-is-just-an-example
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
ALLOWED_CREDENTIALS=true

# AI Integration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External APIs (for future use)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Email Settings (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload (for future use)
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads
